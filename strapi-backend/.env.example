# ===========================================
# YakMarket.tj - Strapi Backend Environment
# Production Ready Configuration
# ===========================================

# ===========================================
# Server Configuration
# ===========================================
HOST=0.0.0.0
PORT=1337
URL=https://yakmarket-api-production.up.railway.app

# Security Keys (generate with: openssl rand -base64 32)
APP_KEYS=your-key-1,your-key-2,your-key-3,your-key-4
API_TOKEN_SALT=your-api-token-salt
ADMIN_JWT_SECRET=your-admin-jwt-secret
TRANSFER_TOKEN_SALT=your-transfer-token-salt
JWT_SECRET=your-jwt-secret

# ===========================================
# Database (PostgreSQL)
# ===========================================
# Option 1: Full connection string
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Option 2: Individual parameters (used if DATABASE_URL not set)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=yakmarket
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-db-password
DATABASE_SSL=true

# ===========================================
# Cloudinary (Media Storage)
# ===========================================
CLOUDINARY_NAME=your-cloud-name
CLOUDINARY_KEY=your-api-key
CLOUDINARY_SECRET=your-api-secret

# ===========================================
# Email (Resend)
# ===========================================
RESEND_API_KEY=re_your_api_key
EMAIL_FROM=noreply@yakmarket.tj

# ===========================================
# Telegram Bot
# ===========================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# ===========================================
# Admin Panel
# ===========================================
ADMIN_EMAIL=admin@yakmarket.tj
ADMIN_PASSWORD=your-secure-admin-password

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=https://yakmarket.tj,https://www.yakmarket.tj,http://localhost:3000

# ===========================================
# Optional: Webhooks
# ===========================================
WEBHOOKS_POPULATE_RELATIONS=false

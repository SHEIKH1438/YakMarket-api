{
    "kind": "collectionType",
    "collectionName": "reviews",
    "info": {
        "singularName": "review",
        "pluralName": "reviews",
        "displayName": "Отзыв"
    },
    "options": {
        "draftAndPublish": false
    },
    "attributes": {
        "rating": {
            "type": "integer",
            "min": 1,
            "max": 5,
            "required": true
        },
        "comment": {
            "type": "text"
        },
        "product": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::product.product",
            "inversedBy": "reviews"
        },
        "author": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "plugin::users-permissions.user"
        }
    }
}